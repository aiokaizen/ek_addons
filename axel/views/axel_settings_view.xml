<?xml version="1.0"?>
<odoo> 
    <record id="axel_tribunal_action" model="ir.actions.act_window">
        <field name="name">Tribunals</field>
        <field name="res_model">axel.tribunal</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Définir un nouveau tribunal</p>
        </field>
    </record>

    <record id="axel_tribunal_type_action" model="ir.actions.act_window">
        <field name="name">Type Tribunal</field>
        <field name="res_model">axel.tribunal_type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Définir un nouveau type tribunal</p>
        </field>
    </record>

    <record id="axel_legal_case_type_action" model="ir.actions.act_window">
        <field name="name">Type de dossier</field>
        <field name="res_model">axel.legal_case_type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Définir un nouveau type de dossier</p>
        </field>
    </record>

    <!-- tribunal tree view -->
    <record id="axel_tribunal_view_tree" model="ir.ui.view">
        <field name="name">axel.tribunal.tree</field>
        <field name="model">axel.tribunal</field>
        <field name="arch" type="xml">
            <tree string="Tribunal" editable="top">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- tribunal tree view -->
    <record id="axel_tribunal_type_view_tree" model="ir.ui.view">
        <field name="name">axel.tribunal_type.tree</field>
        <field name="model">axel.tribunal_type</field>
        <field name="arch" type="xml">
            <tree string="Pv" editable="top" >
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- tribunal tree view -->
    <record id="axel_legal_case_type_view_tree" model="ir.ui.view">
        <field name="name">axel.legal_case_type.tree</field>
        <field name="model">axel.legal_case_type</field>
        <field name="arch" type="xml">
            <tree string="Pv" editable="top" >
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

</odoo>