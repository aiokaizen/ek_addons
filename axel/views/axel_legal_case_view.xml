        </field>
        <!-- <field name="context">{
            'search_default_available_properties': True,
            'group_by': 'property_type_id',
        }</field> -->
    </record>

     <!-- Axel CLient Action -->
    <record id="axel_client_action" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Définir un nouveau client</p>
        </field>
    </record>

    
    <record id="axel_expense_view_form" model="ir.ui.view">
        <field name="name">axel.expense_charge</field>
        <field name="model">axel.expense_charge</field>
        <field name="arch" type="xml">
            <form string="Dépense">
                <group>
                    <field name="amount" />
                    <field name="payment_date" />
                    <field name="description" />
                    <field name="legal_case_id" />
                    <field name="type" default="expense" invisible="1" />
                    <!-- <field name="is_paid" /> -->
                </group>
            </form>
        </field>
    </record>

    <record id="axel_charge_view_form" model="ir.ui.view">
        <field name="name">axel.expense_charge</field>
        <field name="model">axel.expense_charge</field>
        <field name="arch" type="xml">
            <form string="Honoraire">
                <group>
                    <field name="amount" />
                    <field name="payment_date" />
                    <field name="description" />
                    <field name="legal_case_id" />
                    <field name="type" default="charge" invisible="1" />

                    <!-- <field name="is_paid" /> -->
                </group>
            </form>
        </field>
    </record>

    <!-- Axel Pv Action -->
    <record id="axel_pv_action" model="ir.actions.act_window">
        <field name="name">Pv</field>
        <field name="res_model">axel.pv</field>
        <field name="view_mode">tree,form</field>
        
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Définir un nouveau pv</p>
        </field>
        
    </record>
        <!-- TREE RECORD -->
    <record id="axel_pv_view_tree" model="ir.ui.view">
        <field name="name">axel.pv.tree</field>
        <field name="model">axel.pv</field>
        <field name="arch" type="xml">
            <tree string="Pv">
                <field name="civilly_responsible" />
                <field name="pv_date" />
                <field name="scanned_pv" />
                <field name="license_plate_number" />
            </tree>
        </field>
    </record>

    <!-- TREE RECORD legal case -->
    <record id="axel_legal_case_view_tree" model="ir.ui.view">
        <field name="name">axel.legal_case.tree</field>
        <field name="model">axel.legal_case</field>
        <field name="arch" type="xml">
            <tree string="Legal case"
                decoration-success="status == 'paied'"
                decoration-info="status == 'pending'"
                decoration-muted="status == 'archived'"
            >
                <field name="name" />
                <field name="client_ref" />
                <field name="open_date" />
                <field name="status" />
                <field name="total_unpaied" />
                <field name="currency_id" optional="hide" />
            </tree>
        </field>
    </record>

