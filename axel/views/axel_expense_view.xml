<?xml version="1.0"?>
<odoo>    
    <!-- Axel Expense Action -->
    <record id="axel_expense_action" model="ir.actions.act_window">
        <field name="name">Dépenses</field>
        <field name="res_model">axel.expense</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Définir un nouveau dépense</p>
        </field>
    </record>
    <!-- Axel expense TREE RECORD -->
    <record id="axel_expense_view_tree" model="ir.ui.view">
        <field name="name">axel.expense.view.tree</field>
        <field name="model">axel.expense</field>
        <field name="arch" type="xml">
            <tree string="Dépense">
                <field name="name" />
                <field name="amount" />
                <field name="date" />
                <field name="type" />
                <field name="legal_case_id" />
                <field name="currency_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="axel_expense_view_form" model="ir.ui.view">
        <field name="name">axel.expense.view.form</field>
        <field name="model">axel.expense</field>
        <field name="arch" type="xml">
            <form string="Dépense">
                <div class="row">
                    <div class="col-6">
                        <group>
                            <field name="name" />
                            <field name="amount" />
                            <field name="currency_id" invisible="1" />
                            <field name="date" />
                        </group>
                        <group>
                            <field name="type" />
                            <field name="legal_case_id" /> 
                        </group>
                    </div>
                </div>
            </form>
            
        </field>
    </record>

    <!-- Customize the search legalcase view -->
    <record id="expense_view_search" model="ir.ui.view">
        <field name="name">axel.expense.view.search</field>
        <field name="model">axel.expense</field>
        <field name="arch" type="xml">
            <search string="Rechercher un dépense">
                <field name="name" />
                <field name="amount" />
                <field name="type" />
                <field name="date" />
                <field name="legal_case_id" />
            </search>
        </field>
    </record>

</odoo>