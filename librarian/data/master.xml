<odoo>
    <data noupdate="1">

        <!-- Categories -->
        <record id="product_category_book" model="product.category">
            <field name="name">Livre</field>
        </record>

        <!-- PoS Categories -->
        <record id="product_pos_category_book" model="pos.category">
            <field name="name">Livre</field>
        </record>

        <!-- Taxes -->
        <record id="books_taxes_sale" model="account.tax">
            <field name="name">Taxe de vente des livres</field>
            <field name="description">Opérations exonérées sans droit à déduction (article 91 du CGI)</field>
            <field name="amount">0</field>
            <field name="invoice_label">0%</field>
            <field name="country_id" ref="base.ma" />
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="account.1_tax_group_vat_0" />
        </record>

        <record id="books_taxes_purchase" model="account.tax">
            <field name="name">Taxe d'achat des livres</field>
            <field name="description">Opérations exonérées sans droit à déduction (article 91 du CGI)</field>
            <field name="amount">0</field>
            <field name="invoice_label">0%</field>
            <field name="country_id" ref="base.ma" />
            <field name="amount_type">percent</field>
            <field name="type_tax_use">purchase</field>
            <field name="tax_group_id" ref="account.1_tax_group_vat_0" />
        </record>

    </data>
</odoo>
