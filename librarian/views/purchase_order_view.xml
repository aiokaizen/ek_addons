<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="librarian_purchase_order_view_form" model="ir.ui.view">
            <field name="name">purchase.order.view.form.inherit.lirariam</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_qty']" position="after">
                    <field name="counted_qte" column_invisible='not parent.is_consignment_in' />
                </xpath>

                <xpath expr="//group/field[@name='partner_id']" position="before">
                    <field name="is_consignment_in" />
                </xpath>

            </field>
        </record>
    </data>
</odoo>
