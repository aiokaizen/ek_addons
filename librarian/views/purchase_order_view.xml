<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="librarian_purchase_order_view_form" model="ir.ui.view">
            <field name="name">purchase.order.view.form.inherit.lirariam</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='price_unit']" position="before">
                    <field name="counted_qte" column_invisible='not parent.is_consignment_in' />
                </xpath>

                <xpath expr="//tree/field[@name='discount']" position="replace">
                    <field name="discount" string="Disc.%" readonly="qty_invoiced != 0" column_invisible='parent.is_consignment_in' optional="hide"/>
                    <field name="discount" string="Disc.%" readonly="qty_invoiced != 0" column_invisible='not parent.is_consignment_in'/>
                </xpath>

                <xpath expr="//group/field[@name='partner_id']" position="before">
                    <field name="is_consignment_in" readonly="state in ['purchase', 'done']" />
                    <field name="consignment_in_state" readonly="True" invisible='not is_consignment_in' />
                </xpath>

            </field>
        </record>

        <record id="librarian_purchase_order_view_search" model="ir.ui.view">
            <field name="name">purchase.order.view.search.inherit.lirariam</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/filter[@name='draft']" position="after">
                    <separator/>
                    <filter name="consignement_in" string="Afficher les dépôts entrés seulement" domain="[('is_consignment_in', '=', True)]"/>
                    <filter name="exclude_consignement_in" string="Exclure les dépôts entrés" domain="[('is_consignment_in', '=', False)]"/>
                    <filter name="consignement_in_open" string="Les dépôts en cours" domain="[('consignment_in_state', '=', 'open')]"/>
                    <filter name="consignement_in_closed" string="Les dépôts cloturée" domain="[('consignment_in_state', '=', 'closed')]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
