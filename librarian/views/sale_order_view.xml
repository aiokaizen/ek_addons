<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_export_quotation_to_excel" model="ir.actions.server">
        <field name="name">Export Quotation to Excel</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            action = env['sale.order'].browse(env.context.get('active_ids')).export_quotation_to_excel()
        </field>
    </record>


    <record id="view_quotation_tree_inherit_export_option" model="ir.ui.view">
        <field name="name">view.quotation.tree.inherit.export.option</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_export_quotation_to_excel)d"
                        string="Exporter en format Excel"
                        type="action"
                        icon="fa-download"/>
            </xpath>
        </field>
    </record>


</odoo>