<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="librarian_author_action" model="ir.actions.act_window">
        <field name="name">Auteur</field>
        <field name="res_model">librarian.author</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau auteur
            </p>
        </field>
    </record>

    <!-- Customize the list/tree view -->
    <record id="librarian_author_view_tree" model="ir.ui.view">
        <field name="name">librarian.author.tree</field>
        <field name="model">librarian.author</field>
        <field name="arch" type="xml">
            <tree string="Properties">
              <field name="name" />
            </tree>
        </field>
    </record>

    <!-- Menu items -->
    <menuitem id="stock_menu_authors_librarian" name="Auteurs" action="librarian.librarian_author_action"
        parent="stock.menu_stock_inventory_control" sequence="200"/>
    
    <menuitem id="sale_menu_authors_librarian" name="Auteurs" action="librarian.librarian_author_action"
        parent="sale.product_menu_catalog" sequence="200"/>

    <menuitem id="pos_menu_authors_librarian" name="Auteurs" action="librarian.librarian_author_action"
        parent="point_of_sale.pos_config_menu_catalog" sequence="200"/>

</odoo>
