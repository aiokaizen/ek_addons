<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="vehicle_rental_search_view" model="ir.ui.view">
            <field name="name">vehicle.rental.search.view</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_search"/>
            <field name="arch" type="xml">
                
                <xpath expr="//search/filter[@name='bikes']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//search/filter[@name='cars']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//search/filter[@name='trailer_hook']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//search/filter[@name='planned']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!--Fleet Vehicle-->
        <record id="vehicle_rental_form_view" model="ir.ui.view">
            <field name="name">vehicle.rental.form.view</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='plan_to_change_car']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='plan_to_change_bike']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='state_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <!-- <xpath expr="//field[@name='contract_count']" position="attributes">
                    <attribute name="string">Maintenances</attribute>
                </xpath> -->
                <xpath expr="//button[@name='return_action_to_open'][field[@name='contract_count']]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='open_assignation_logs']" position="before">
                    <button class="oe_stat_button" type="object" name="action_rental_contract_view" icon="fa-taxi">
                        <field string="Rental Contracts" name="rental_contract_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//header" position="inside">
                    <field name="status" widget="statusbar"/>
                    <button string="Under Maintenance" name="available_to_in_maintenance" type="object"
                            invisible="status == 'in_maintenance'" class="btn btn-danger"/>
                    <button string="Operational" name="in_maintenance_to_available" type="object"
                            invisible="status == 'available'" class="btn btn-success"/>
                </xpath>
                <xpath expr="//field[@name='image_128']" position='before'>
                    <widget name="web_ribbon" title="Operational" bg_color="bg-success"
                            invisible="status == 'in_maintenance'"/>
                    <widget name="web_ribbon" title="In Maintenance" bg_color="bg-danger"
                            invisible="status == 'available'"/>
                </xpath>

                <!-- <xpath expr="//group/field[@name='manager_id']" position="before" >
                    <label for="total_km_vidange" invisible="vehicle_type != 'car'"/>
                    <div class="o_row o_hr_narrow_field" invisible="vehicle_type != 'car'">
                            <field name="total_km_vidange"/>
                            <field name="odometer_unit"/>
                    </div>
                </xpath> -->

                <xpath expr="//form/sheet/group" position="inside">
                    <group string="Rent Details">
                        <field name="rent_hour"/>
                        <field name="rent_day"/>
                        <field name="rent_week"/>
                        <field name="rent_month"/>
                        <field name="rent_year"/>
                        <field name="rent_km"/>
                        <field name="rent_mi"/>
                    </group>
                    <group string="Extra Charge Details">
                        <field name="extra_charge_hour"/>
                        <field name="extra_charge_day"/>
                        <field name="extra_charge_week"/>
                        <field name="extra_charge_month"/>
                        <field name="extra_charge_year"/>
                        <field name="extra_charge_km"/>
                        <field name="extra_charge_mi"/>
                    </group>
                    <group string="CrÃ©dit bancaire">
                        <field name="bank_credit"/>
                        <field name="date_end_bank_credit" invisible="bank_credit == False" />
                    </group>
                </xpath>

                <xpath expr="//notebook/page[@name='note']" position="before" >
                    <page name="rental_vehicle_image" string="Vehicle Images">
                        <field name="vehicle_image_ids" nolabel="1">
                            <form>
                                <sheet>
                                    <group string="Vehicle Image">
                                        <field name="avatar" widget="image" style="width: 75%;" nolabel="1"/>
                                    </group>
                                </sheet>
                            </form>
                            <kanban string="Kanban" class="">
                                <field name="id"/>
                                <field name="avatar"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click"
                                                style="max-width: 340px !important; max-height: 320px !important;">
                                            <div class="col-12">
                                                <img t-att-src="kanban_image('vehicle.image', 'avatar', record.id.raw_value)"
                                                        t-att-alt="name" style="margin: 0px;"
                                                        class="img img-responsive" width="320px" height="280px"/>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                    <page string="Papiers" name="paper">
                        <field string="Les papier" name="paper_ids" >
                            <tree editable="top" >
                                <field name="type_id" />
                                <field name="issue_date" />
                                <field name="expiry_date" />
                                <field name="file" filename="filename" widget="binary" />
                                <field name="filename" column_invisible="1"/>
                                <field name="owner_id" />
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

        <record id='vehicle_rental_tree_view' model='ir.ui.view'>
            <field name="name">vehicle.rental.tree.view</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="status" widget="badge"
                           decoration-success="status == 'available'"
                           decoration-danger="status == 'in_maintenance'"/>
                </xpath>
            </field>
        </record>

        <record id='vehicle_rental_kanban_view' model='ir.ui.view'>
            <field name="name">vehicle.rental.kanban.view</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_kanban_record_bottom')]" position="after">
                    <div class="oe_kanban_bottom_right">
                        <field name="status" widget="badge"
                               decoration-success="status == 'available'"
                               decoration-danger="status == 'in_maintenance'"/>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="action_fleet_vehicle" model="ir.actions.act_window">
            <field name="name">Vehicle</field>
            <field name="res_model">fleet.vehicle</field>
            <field name="view_mode">kanban,tree,form,pivot,activity</field>
            
        </record>
       
        

        <!--Fleet Vehicle Log Contract-->
        <record id="fleet_vehicle_log_contract_form_view_inherit" model="ir.ui.view">
            <field name="name">fleet.vehicle.log.contract.form.view.inherit</field>
            <field name="model">fleet.vehicle.log.contract</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_log_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vehicle_id']" position="after">
                    <field name="license_plate"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>