<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id='fleet_vehicle_log_services_inherit_view_form' model='ir.ui.view'>
            <field name="name">fleet.vehicle.log.services.form</field>
            <field name="model">fleet.vehicle.log.services</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_form"/>
            <field name="arch" type="xml">
                <header>
                    <button name="action_create_sale_order" type="object" string="Create Sale Order" class="oe_highlight"/>
                </header>

                <xpath expr="//field[@name='date']" position="before">
                    <field name="slug_service" invisible="True" />
                    <field name="oil_change_odometer" invisible="slug_service != 'oil-change'"/>
                </xpath>

                <xpath expr="//separator" position="replace">
                    <div></div>
                </xpath>
                <xpath expr="//field[@name='notes']" position="replace">
                    <notebook>
                        <page string="Products" name="service_product_ids" >
                            <field name="service_product_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            <!-- Computed Amounts -->
                            <div class="row">
                                <div class="o_inner_group grid col-lg-8">

                                </div>
                                <div class="o_inner_group grid oe_subtotal_footer col-lg-4" >
                                    <group>
                                        <field name="amount_untaxed" readonly="1"/>
                                        <field name="amount_tax" readonly="1"/>
                                        <field name="amount_total" readonly="1"/>
                                    </group>
                                </div>
                            </div>
                        </page>
                        <page string="Notes" name="notes" >
                            <field nolabel="1" name="notes" placeholder="Write here any other information related to the service completed."/>
                        </page>
                    </notebook>
                </xpath>

                <xpath expr="//header" position="inside" >
                    <!-- <field name="has_sale_order" invisible="1" /> -->

                    <!-- <button 
                        name="action_create_sale_order" 
                        type="object" string="Create Sale Order" class="oe_highlight" 
                    /> -->
                    <!-- <button 
                        name="update_sale_order" 
                        type="object" string="Update Sale Order" class="oe_highlight"
                    /> -->
                </xpath>
            </field>
        </record>


        <record id='fleet_vehicle_log_services_inherit_view_tree' model='ir.ui.view'>
            <field name="name">fleet.vehicle.log.services.tree</field>
            <field name="model">fleet.vehicle.log.services</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="before">
                    <field name="odometer" />
                </xpath>
            </field>
        </record>
       
    </data>
</odoo>