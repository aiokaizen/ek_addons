<?xml version="1.0" encoding="utf-8"?>
<!-- rental_vehicle/views/rental_vehicle_config_view.xml -->

<odoo>
    <record id="rental_vehicle_config_view_form" model="ir.ui.view">
        <field name="name">rental.vehicle.config.settings</field>
        <field name="model">rental.vehicle.config</field>
        <field name="arch" type="xml">
            <form string="Rental Vehicle Settings">
                <group>
                    <!-- <field name="max_odometer_change_oil"/> -->
                    <field name="alert_message_km"/>
                    <field name="w18_duration_default"/>
                    <field name="recepisse_duration_default"/>
                    <field name="carte_grise_duration_default"/>
                </group>
            </form>
        </field>
    </record>

    <record id="rental_vehicle_config_action" model="ir.actions.act_window">
        <field name="name">Rental Vehicle Settings</field>
        <field name="res_model">rental.vehicle.config</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    
</odoo>
