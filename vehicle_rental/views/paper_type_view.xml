<?xml version="1.0"?>
<odoo>

    <record id="vehicle_rental_paper_type" model="ir.actions.act_window">
        <field name="name">Type de papier</field>
        <field name="res_model">vehicle.rental.paper.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">DÃ©finir un nouveau type</p>
        </field>
    </record>


    <record id="vehicle_rental_paper_type_view_tree" model="ir.ui.view">
        <field name="name">vehicle.rental.paper.type.tree</field>
        <field name="model">vehicle.rental.paper.type</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="days_to_alert" />
            </tree>
        </field>
    </record>

    <record id="vehicle_rental_paper_type_view_form" model="ir.ui.view">
        <field name="name">vehicle.rental.paper.type.form</field>
        <field name="model">vehicle.rental.paper.type</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <group>
                    <field name="auto_generated" invisible="1" />
                    <field name="name" readonly="auto_generated" />
                    <field name="slug" readonly="1" />
                    <field name="days_to_alert" />
                </group>
            </form>
        </field>
    </record>

</odoo>